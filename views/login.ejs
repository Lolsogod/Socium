<% include partials/header %>
<div class="col-md-3 "></div>
<div class="col-res col-md-6 ">
  <!--new post form-->
  <div class="card">
    <div <%if(error && error.length > 0){%>
            id="form-error"
          <%}else{%>
            id="form-head"
          <%}%>
           class="card-header">
      <%=error%>
      <h4>Log in</h4>
    </div>
    <div class="card-body">
      <form action="/login" method="POST">
        <h6>Login</h6>
        <input type="text" class="mt-1 mb-2 form-control" name="username" placeholder="User name..." required tabindex="1">
        <h6>Password</h6>
        <input type="password" class="mt-1 mb-2 form-control" name="password" placeholder="Your password..." required tabindex="2">
        <input type="submit" class="ml-2 mt-2 btn btn-primary float-right" value="Log in" tabindex="3"> 
        <a href="/s/all" class="mt-2 btn btn-outline-primary float-right">Cancel</a>
        <h6 class="mt-3">New to socium? Then <a href="/register">sign up</a>!</h6>
      </form>
    </div>
  </div>
</div>
</div>
<% include partials/footer %>